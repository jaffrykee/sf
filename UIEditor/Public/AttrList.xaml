<Grid
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:userView="clr-namespace:UIEditor"
	mc:Ignorable="d"
	x:Class="UIEditor.AttrList"
	x:Name="mx_root"
	Loaded="mx_root_Loaded">
	<StackPanel Margin="2,2,2,2">
		<Border BorderThickness="1" BorderBrush="#ffffffff" CornerRadius="2">
			<Label Margin="0,0,0,0" Padding="5,1,0,1" Name="mx_title"></Label>
		</Border>
		<StackPanel Name="mx_frame">
			<Grid Name="mx_setting"
					HorizontalAlignment="Right"
					Margin="2,2,2,2"
					MinWidth="250">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Name="mx_cs0" Width="125"/>
					<ColumnDefinition Name="mx_cs1" Width="*"/>
				</Grid.ColumnDefinitions>
				<CheckBox Name="mx_onlySetted"
					Grid.Column="0"
					IsChecked="True"
					Checked="mx_onlySetted_Checked"
					Unchecked="mx_onlySetted_Unchecked"
					Foreground="#ffffffff"
					VerticalAlignment="Center"
					Margin="10,0,0,0"
					Content="隐藏未赋值的项"/>
				<CheckBox Name="mx_onlyMain"
					Checked="mx_onlyMain_Checked"
					Unchecked="mx_onlyMain_Unchecked"
					Foreground="#ffffffff"
					Grid.Column="1"
					VerticalAlignment="Center"
					Margin="10,0,0,0"
					Content="只显示常用项"/>
			</Grid>
		</StackPanel>
	</StackPanel>
</Grid>