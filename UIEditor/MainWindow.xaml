<Window
	x:Class="UIEditor.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:userView="clr-namespace:UIEditor"
	Title="MainWindow" Width="1280" Height="800"
	WindowState="Maximized"
	Loaded="On_UIReady"
	>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*" MinHeight="50"/>
			<RowDefinition Height="150" MinHeight="100"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250" MinWidth="100" MaxWidth="400"/>
			<ColumnDefinition Width="*" MinWidth="50"/>
			<ColumnDefinition Width="300" MinWidth="300"/>
		</Grid.ColumnDefinitions>
		<Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top">
			<MenuItem Header="文件">
                <MenuItem Header="新建">
                </MenuItem>
                <MenuItem Header="打开" Click="openProj">
				</MenuItem>
				<Separator/>
				<MenuItem Header="保存"/>
				<MenuItem Header="全部保存"/>
				<Separator/>
				<MenuItem Header="退出"/>
			</MenuItem>
			<MenuItem Header="编辑">
				<MenuItem Header="MenuItem"/>
				<MenuItem Header="MenuItem"/>
				<MenuItem Header="MenuItem"/>
			</MenuItem>
		</Menu>
		<DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="#ffdddddd">
            <ToolBar HorizontalAlignment="Left">
                <Button>新建</Button>
                <Button Click="openProj">打开</Button>
                <Button>保存</Button>
                <Button>全部保存</Button>
                <Separator/>
                <Button>撤销</Button>
                <Button>重复</Button>
			</ToolBar>
			<ToolBar HorizontalAlignment="Left">
				<Label>调试模式：</Label>
				<TextBox MinWidth="100" Name="mx_hwndDebug"></TextBox>
			</ToolBar>
		</DockPanel>
		<DockPanel Grid.Row="2" Grid.RowSpan="3" Grid.Column="0" Background="#ffdddddd" Margin="0,0,5,0">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<Grid Background="#ff333333">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="100"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<CheckBox IsEnabled="False" IsChecked="True" Foreground="#ffaaaaaa" Grid.Column="0" VerticalAlignment="Center" Margin="10,0,0,0">显示name</CheckBox>
					<CheckBox IsEnabled="False" IsChecked="True" Foreground="#ffaaaaaa" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">显示id</CheckBox>
				</Grid>
				<TreeView BorderThickness="0" Grid.Row="1">
					<TreeViewItem Name="mx_treePro">
					</TreeViewItem>
				</TreeView>
			</Grid>
		</DockPanel>
		<GridSplitter Grid.Row="2" Grid.RowSpan="4" Grid.Column="0" Width="5"></GridSplitter>
		<Grid Grid.Row="2" Grid.RowSpan="3" Grid.Column="2" Background="#ffdddddd" Margin="5,0,0,0">
			<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
				<StackPanel Name="mx_toolArea" Width="auto">
				</StackPanel>
			</ScrollViewer>
		</Grid>
		<GridSplitter Grid.Row="2" Grid.RowSpan="4" Grid.Column="2" Width="5" HorizontalAlignment="Left"></GridSplitter>
		<DockPanel Grid.Row="2" Grid.Column="1" Background="#ffeeeeee" Margin="0,0,0,5">
			<TabControl Name="mx_workTabs" SelectionChanged="mx_workTabs_SelectionChanged">
			</TabControl>
		</DockPanel>
		<Grid Grid.Row="3" Grid.Column="1" Name="mx_drawFrame">
			<Border Name="mx_GLCtrl"></Border>
		</Grid>
		<GridSplitter Grid.Row="3" Grid.Column="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Bottom"></GridSplitter>
		<DockPanel Grid.Row="4" Grid.Column="1">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="auto"/>
					<RowDefinition Height="*"/>
				</Grid.RowDefinitions>
				<StackPanel Grid.Row="0" Orientation="Horizontal">
					<Button Width="auto" Margin="10,2,2,2" Padding="2" Click="mx_bClearDebug_Click">
						clear
					</Button>
				</StackPanel>
				<TextBox
					Name="mx_debug"
					Grid.Row="1"
					TextWrapping="Wrap"
					AcceptsReturn="True"
					VerticalScrollBarVisibility="Visible"
					HorizontalAlignment="Stretch"
					IsReadOnly="True"
					TextChanged="mx_debug_TextChanged"/>
			</Grid>
		</DockPanel>
	</Grid>
</Window>
