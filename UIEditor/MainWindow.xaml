<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="UIEditor.MainWindow"
        Title="MainWindow" Width="Auto" Height="Auto"
		>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="100"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="250"/>
			<ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
		</Grid.ColumnDefinitions>
		<Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top">
			<MenuItem Header="文件">
                <MenuItem Header="新建">
                </MenuItem>
                <MenuItem Header="打开" Click="openProj">
				</MenuItem>
				<Separator/>
				<MenuItem Header="保存"/>
				<MenuItem Header="全部保存"/>
				<Separator/>
				<MenuItem Header="退出"/>
			</MenuItem>
			<MenuItem Header="编辑">
				<MenuItem Header="MenuItem"/>
				<MenuItem Header="MenuItem"/>
				<MenuItem Header="MenuItem"/>
			</MenuItem>
		</Menu>
		<DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="#ffdddddd">
            <ToolBar HorizontalAlignment="Left">
                <Button>新建</Button>
                <Button Click="openProj">打开</Button>
                <Button>保存</Button>
                <Button>全部保存</Button>
                <Separator/>
                <Button>撤销</Button>
                <Button>重复</Button>
            </ToolBar>
        </DockPanel>
		<DockPanel Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Background="#ffdddddd">
            <TreeView>
                <TreeViewItem Name="treePro">
                </TreeViewItem>
            </TreeView>
		</DockPanel>
		<DockPanel Grid.Row="2" Grid.RowSpan="2" Grid.Column="2" Background="#ffdddddd">
			<Label>工具区域2</Label>
		</DockPanel>
		<DockPanel Grid.Row="2" Grid.Column="1" Background="#ffeeeeee">
            <DockPanel>
                <Label>绘图区域1</Label>
            </DockPanel>
            <DockPanel>
                <Label>绘图区域2</Label>
            </DockPanel>
            <DockPanel>
                <Label>绘图区域3</Label>
            </DockPanel>
            <DockPanel>
                <Label>绘图区域4</Label>
            </DockPanel>
            
		</DockPanel>
		<DockPanel Grid.Row="3" Grid.Column="1">
			<Label>xml源码</Label>
		</DockPanel>
	</Grid>
</Window>
