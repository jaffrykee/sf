<Window x:Class="UIEditor.ImageTools.ImageNesting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ImageNesting"
		Name="mx_root"
		Width="1000"
		Height="850">
	<Grid Name="mx_rootGrid" Background="#22333333">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="auto"/>
		</Grid.ColumnDefinitions>
		<Grid>
			<ScrollViewer>
				<Canvas Name="mx_canvas"
						Width="800"
						Height="800"
						Margin="5"
						Background="#ffffffff"
						HorizontalAlignment="Left"
						VerticalAlignment="Top"/>
			</ScrollViewer>
		</Grid>
		<Grid Grid.Column="1">
			<WrapPanel MinWidth="150">
				<Button Name="mx_start" Click="mx_start_Click" Margin="10" Padding="15,2,15,2">开始</Button>
			</WrapPanel>
		</Grid>
    </Grid>
</Window>
